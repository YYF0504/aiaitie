/* pages/cart/cart.wxss */

page {
  background-color: #f0f0f0;
}

.bg {
  width: 100%;
  height: 100%;
  padding-top: 50rpx;
  background-attachment: fixed;
  background-repeat:no-repeat;
  background-size:100% 100%
}

.cart-box {
  width: 100%;
  margin-top: 5rpx;
  padding: 3% 2% 3% 2%;
}

.list {
  width: 96%;
  height: 350rpx;
  margin-top: 5rpx;
  padding: 3% 2% 3% 2%;
}

.cart-thumb {
  width: 50rpx;
  height: 100rpx;
}

.description_of_product {  
  font-size: 15px;
  color: #000000;
  font-family: "微软雅黑";
  margin-left: 10%;
  font-weight: bolder;
}

.description_item{
  font-size: 12px;
  color: #0000006c;
  font-family: "微软雅黑";
  margin-left:10%;
  margin-top:5%;
}
.bottom{
  font-size: 20px;
  color: #000000;
  font-family: "微软雅黑";
  margin-bottom: 0rpx;
}