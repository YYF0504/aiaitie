<!--pages/allsaleproducts/allsaleproducts.wxml-->

<view class='bg'>
  <view class='title'>全部商品</view>
  <view class='list' wx:for="{{imgSrcArray}}" wx:for-item="item">
    <view class='img_product'>
      <image style='width:100%; height:100%;' mode='widthFix' src="{{item}}"></image>
    </view>
    <view style='width:70%; height:100%; float:right;'>
      <text class='description_of_product'>{{descriptionNameArray[index]}}</text>
      <view class='description_item'>
        简介：{{descriptionArray[index]}}
      </view>      
    </view>
  </view>
</view>